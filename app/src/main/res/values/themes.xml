<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.WeatherForecast" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@android:color/transparent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/transparent</item>
        <item name="colorSecondaryVariant">@android:color/transparent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/white</item>

    </style>

    <style name="Theme.WeatherForecast" parent="Base.Theme.WeatherForecast" />

    <style name="splashScreenTheme" parent="Theme.SplashScreen">>
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="postSplashScreenTheme">@style/Theme.WeatherForecast</item>
    </style>



    <style name="TextStyleDailyItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/cairo_semibold</item>
        <item name="android:textColor">@color/text_background</item>
        <item name="android:textSize">18dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextStyleDetailsLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/cairo_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TextStyleDetailsLayoutTitles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/cairo_semibold</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="rippleColor">@color/light_blue</item>
        <item name="srcCompat">@drawable/baseline_add_24</item>
        <item name="tint">@color/white</item>


    </style>

    <style name="RecyclerViewStyle">
        <item name="android:layout_width">@dimen/zero_dimens</item>
        <item name="android:layout_height">@dimen/zero_dimens</item>
        <item name="android:layout_margin">@dimen/margin_medium</item>
        <item name="android:orientation">vertical</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>


    <style name="LoadingLottie">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="lottie_autoPlay">true</item>
        <item name="lottie_loop">true</item>
        <item name="lottie_rawRes">@raw/loading</item>
    </style>



    <style name="SettingsCardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cardCornerRadius">25dp</item>
        <item name="cardElevation">3dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="rippleColor">@color/light_blue</item>
        <item name="strokeWidth">0dp</item>
    </style>


    <style name="CardViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/card_background</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="RadioGroup" >
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="colorOnSurface">@color/light_blue</item>
        <item name="colorPrimary">@color/light_blue</item>
    </style>


    <style name="RadioButton" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.App.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.RadioButton</item>
    </style>

    <style name="ThemeOverlay.App.RadioButton" parent="">
        <item name="colorOnSurface">#FF7CA9FF</item>
        <item name="colorPrimary">#FF7CA9FF</item>
    </style>

    <style name="MyCustomAlertDialogStyle" parent="Theme.Material3.Light.Dialog.Alert">
    </style>


</resources>