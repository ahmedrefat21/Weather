<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WeatherForecast" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.WeatherForecast" parent="Base.Theme.WeatherForecast" />

    <style name="splashScreenTheme" parent="Theme.SplashScreen">>
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="postSplashScreenTheme">@style/Theme.WeatherForecast</item>
    </style>



    <style name="TextStyleDailyItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/cairo</item>
        <item name="android:textColor">@color/text_background</item>
        <item name="android:textSize">16dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextStyleDetailsLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/cairo_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TextStyleDetailsLayoutTitles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/cairo_semibold</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>


</resources>